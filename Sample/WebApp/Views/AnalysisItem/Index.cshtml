@using WebApp.Data
@model IEnumerable<AnalysisItemEntity>

@{
    ViewData["Title"] = "分析項目列表";
}

<h1>分析項目列表</h1>

<div class="row mb-3">
    <div class="col-12">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="dataCategory" class="form-label">資料類別</label>
                <input type="text" class="form-control" name="dataCategory" id="dataCategory" 
                       value="@ViewBag.DataCategory" placeholder="輸入資料類別" />
            </div>
            <div class="col-md-4">
                <label for="name" class="form-label">分析項目名稱</label>
                <input type="text" class="form-control" name="name" id="name" 
                       value="@ViewBag.Name" placeholder="輸入分析項目名稱" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">搜尋</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">清除</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>資料類別</th>
                    <th>分析項目名稱</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <span class="badge bg-info">@item.DataCategory</span>
                        </td>
                        <td>@item.Name</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" 
                               class="btn btn-sm btn-outline-primary">詳細資料</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">共找到 @Model.Count() 筆分析項目</p>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">沒有找到資料</h4>
        <p>目前沒有符合搜尋條件的分析項目。</p>
        <hr>
        <p class="mb-0">請嘗試調整搜尋條件或 <a href="@Url.Action("Index")" class="alert-link">清除所有篩選條件</a>。</p>
    </div>
}