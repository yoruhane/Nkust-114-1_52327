@using WebApp.Data
@model IEnumerable<FoodAnalysisItemEntity>

@{
    ViewData["Title"] = "食品分析項目關聯列表";
}

<h1>食品分析項目關聯列表</h1>

<div class="row mb-4">
    <div class="col-12">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="foodId" class="form-label">選擇食品</label>
                @await Component.InvokeAsync("FoodDropdown", new { 
                    name = "foodId", 
                    selectedValue = ViewBag.foodId,
                    includeAllOption = true, 
                    isRequired = false 
                })
            </div>
            <div class="col-md-4">
                <label for="analysisItemId" class="form-label">選擇分析項目</label>
                @await Component.InvokeAsync("AnalysisItemDropdown", new { 
                    name = "analysisItemId", 
                    selectedValue = ViewBag.analysisItemId,
                    includeAllOption = true, 
                    isRequired = false 
                })
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">搜尋</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary me-2">清除</a>
                <a href="@Url.Action("Import")" class="btn btn-success">匯入資料</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>食品</th>
                    <th>分析項目</th>
                    <th>每100克含量</th>
                    <th>含量單位</th>
                    <th>樣本數</th>
                    <th>資料類別</th>
                    <th>建立時間</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <strong>@item.Food.SampleName</strong>
                            <br><small class="text-muted">@item.Food.IntegratedNumber</small>
                        </td>
                        <td>
                            <span class="badge bg-info">@item.AnalysisItem.Name</span>
                        </td>
                        <td class="text-end">
                            @if (item.ContentPer100g.HasValue)
                            {
                                <strong>@item.ContentPer100g.Value.ToString("N2")</strong>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@(item.ContentUnit ?? "-")</td>
                        <td>@(item.SampleCount?.ToString() ?? "-")</td>
                        <td>
                            <span class="badge bg-secondary">@item.DataCategory</span>
                        </td>
                        <td>
                            <small>@item.CreatedAt.ToString("yyyy/MM/dd")</small>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" 
                               class="btn btn-sm btn-outline-primary">詳細</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">共找到 @Model.Count() 筆食品分析項目關聯 <small>（最多顯示 100 筆）</small></p>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">沒有找到資料</h4>
        <p>目前沒有符合搜尋條件的食品分析項目關聯。</p>
        <hr>
        <p class="mb-0">
            請嘗試：
            <ul>
                <li>調整搜尋條件</li>
                <li>選擇不同的食品或分析項目</li>
                <li><a href="@Url.Action("Import")" class="alert-link">匯入新的關聯資料</a></li>
                <li><a href="@Url.Action("Index")" class="alert-link">清除所有篩選條件</a></li>
            </ul>
        </p>
    </div>
}

<div class="mt-4">
    <div class="row">
        <div class="col-md-6">
            <h5>功能說明</h5>
            <ul>
                <li><strong>搜尋</strong>: 使用下拉選單選擇食品和分析項目進行精確查詢</li>
                <li><strong>匯入</strong>: 從原始 FoodInfo 資料轉換為正規化的關聯結構</li>
                <li><strong>詳細</strong>: 查看完整的營養成分資訊</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h5>快速連結</h5>
            <div class="d-grid gap-2">
                <a href="@Url.Action("Index", "Food")" class="btn btn-outline-primary">管理食品</a>
                <a href="@Url.Action("Index", "AnalysisItem")" class="btn btn-outline-secondary">管理分析項目</a>
                <a href="@Url.Action("Index", "FoodInfo")" class="btn btn-outline-info">原始資料</a>
            </div>
        </div>
    </div>
</div>