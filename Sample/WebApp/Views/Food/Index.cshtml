@using WebApp.Data
@model IEnumerable<FoodEntity>

@{
    ViewData["Title"] = "食品-列表";
}

<h1>食品-列表</h1>

<div class="row mb-3">
    <div class="col-12">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="integratedNumber" class="form-label">整合編號</label>
                <input type="text" class="form-control" name="integratedNumber" id="integratedNumber" 
                       value="@ViewBag.IntegratedNumber" placeholder="輸入整合編號" />
            </div>
            <div class="col-md-4">
                <label for="sampleName" class="form-label">樣品名稱</label>
                <input type="text" class="form-control" name="sampleName" id="sampleName" 
                       value="@ViewBag.SampleName" placeholder="輸入樣品名稱" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">搜尋</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">清除</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>整合編號</th>
                    <th>樣品名稱</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <code>@item.IntegratedNumber</code>
                        </td>
                        <td>
                            <strong>@item.SampleName</strong>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" 
                               class="btn btn-sm btn-outline-primary">詳細資料</a>
                            <a href="@Url.Action("Index", "FoodInfo", new { id = item.IntegratedNumber })" 
                               class="btn btn-sm btn-outline-success">營養成分</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">共找到 @Model.Count() 筆食品資料</p>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">沒有找到資料</h4>
        <p>目前沒有符合搜尋條件的食品。</p>
        <hr>
        <p class="mb-0">請嘗試調整搜尋條件或 <a href="@Url.Action("Index")" class="alert-link">清除所有篩選條件</a>。</p>
    </div>
}